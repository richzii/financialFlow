<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddFinances"
    android:background="@drawable/main_bg">

    <ImageView
        android:id="@+id/addFin_bg"
        android:layout_width="346dp"
        android:layout_height="488dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="19dp"
        android:src="@drawable/flow_bg" />

    <Spinner
        android:id="@+id/spinnerType"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="77dp"
        android:layout_marginTop="119dp"
        android:layout_marginEnd="77dp"
        android:alpha="0.7"
        android:background="#e4e4e4"
        android:entries="@array/financialFlowTypes"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/text_ChooseType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/spinnerType"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="94dp"
        android:text="Veids:"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/text_pickDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="168dp"
        android:layout_marginEnd="77dp"
        android:text="Izvēlies datumu"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="77dp"
        android:alpha="0.7"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Ievadi daudzumu (eur)"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/piezime"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="273dp"
        android:alpha="0.7"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Piezīme"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button_addToDb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="157dp"
        android:text="PIEVIENOT" />

</RelativeLayout>